<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table class="table">
  <thead>
    <tr>
      <th>Place name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.place_name %></td>
        <td><%= Company.find(place.company_id).name %></td>
        <td><%= link_to 'Show', place , :class=>"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_place_path(place), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_place_path , :class=>"btn btn-default"%>
