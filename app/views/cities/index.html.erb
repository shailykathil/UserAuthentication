<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table class="table">
  <thead>
    <tr>
      <th>City name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= link_to 'Show', city, :class=>"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_city_path(city), :class=>"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

