<p id="notice"><%= notice %></p>

<h1>States</h1>

<table class="table">
  <thead>
    <tr>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td><%= link_to 'Show', state, :class=>"btn btn-info" %></td>
        <td>
        <%= link_to 'Edit', "#i",:remote => true,:class=>"btn btn-warning", onclick: "edit_fun_state(#{state.id});"%>
        </td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path, :class=>"btn btn-default" %>
<div class="edit-states">
</div>
<script type="text/javascript">
  function edit_fun_state(argument) {
    $.ajax({
    url: "/states/"+ argument +"/edit_state",
    type: "GET",
  });
  }
</script>