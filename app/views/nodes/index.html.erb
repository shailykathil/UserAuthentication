<p id="notice"><%= notice %></p>
<div class="edit-node"></div>
<h1>Nodes</h1>
<table class="table">
  <thead>
    <tr>
      <th>Node name</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.node_name %></td>
        <td><%= Place.find(node.place_id).place_name %></td>
        <td><%= link_to 'Show', node ,:class=>"btn btn-info"%></td>
        <td><%= link_to 'Edit', '#op', :remote => true,:class=>"btn btn-warning", onclick: "edit_node_fun(#{node.id})"%></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Node', new_node_path, :class=>"btn btn-default"%>
<script type="text/javascript">
  function edit_node_fun(argument) {
    $.ajax({
      url: "/nodes/"+argument+"/edit_node",
      type: "GET",
  });
  }
</script>