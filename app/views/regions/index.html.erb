<p id="notice"><%= notice %></p>

<h1>Regions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Region name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region_name %></td>
        <td><%= link_to 'Show', region  ,:class=>"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_region_path(region)  ,:class=>"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' }  ,:class=>"btn btn-default"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path ,:class=>"btn btn-default"%>
